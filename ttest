function incrementalcounts(text, letters; casesensitive = true, minfirstcount = 1)
    (isempty(text) || isempty(letters)) && return false
    if !casesensitive
        text = lowercase(text)
        letters = map(lowercase, letters)
    end
    counts = map(c -> count(isequal(c, text), letters)
    counts[begin] < minfirstcount && return false
    return allequal(diff(counts))
end
