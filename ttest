using Images

t_start, t_end, s_start, s_end = 0.0, 1.0, 0.0, 1.0

dt = (t_end - t_start) / 1000
ds = (s_end - s_start) / 1000

mat = [sqrt() for t in t_start:dt:t_end, s in s_start:ds:s-end]
img = Matrix{Gray{AbstractFloat}}(mat)
minima = findlocalminima(img)

for m in minima
    if isapprox(mat[m], 0)
        push!(answers, m)
    end
    new_t_start, new_t_end = m[1] - 10 * dt, m[1] + 10 * dt
    new_s_start, new_s_end = m[2] - 10 * ds, m[2] + 10 * ds
...

end    
