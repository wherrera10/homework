directions = [[-1, 0], [-1, 1], [0, 1], [1, 0], [1, -1], [0, -1]]
d_text = ["n", "ne", "se", "s", "sw", "nw"]
d_seq = [directions[findfirst(s)] for s in split(read("$DIR/day11.txt", String), r"\s?,\s?")]
start = [0, 0]
pos = copy(start)
for d in d_seq
    pos .+= d
end

function axial_distance11((x1, y1), (x2, y2))
    dx = x1 - x0
    dy = y1 - y0
    return max(abs(dx), abs(dy), abs(dx + dy))
end
