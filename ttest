
""" Return true iff `n` decreased in all digits by 1 is a square of some integer """
is_subunit_square(n) = (d = digits(n); all(>(0), d) && issquare(evalpoly(10, d .- 1)))

for i in 1:10^9
    is_subunit_square(i^Int128(2)) && println(i^2)
end


