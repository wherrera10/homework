using Primes

let
    p = primesmask(1003)
    println("Cousin primes under 1,000:")
    count = 0
    for i in 2:999
        if !p[i] && !p[i + 4]
            print(lpad(i, 4), ":", lpad(i + 4, 4), "  ")
            count =+ 1
            count % 7 == 0 && println()
        end
    end
    println("\n\n$count pairs found")
end
