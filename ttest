def printMinCells(siz):
    print("\nMinimum number of cells after, before, above and below {n} x {n} square:")
    for row in range(siz):
        cells = [min(siz - row - 1, row, siz - cel - 1) for cel in range(siz)]
        print(" ".join([str(n) for n in cells]))
 
for gridsize in [10, 9, 2, 1]:
    printMinCells(gridsize)
    
