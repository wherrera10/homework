using Libc

# Fork process
pid = ccall(:fork, Cint, ())
if pid != 0
    println("Child process detached with pid $pid")
    exit(0)
end

# Redirect standard I/O
old_stdin = stdin
old_stdout = stdout
old_stderr = stderr
redirect_stdio(stdin=open("/dev/null", "r"),
               stdout=open("/tmp/dmn.log", "w"),
               stderr=stdout)
close(old_stdin)
close(old_stdout)
close(old_stderr)

# Create new session
ccall(:setsid, Cint, ())

t = time()
while time() < t + 10
    println("timer running, $(time() - t) seconds")
    sleep(1)
end
