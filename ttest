""" The word representation of integers is via groups of three consecutive digits """

using SpelledOut

spelledcache = [spelled_out(n, lang = :en) for n in 0:999]
spell(n) = spelledcache[n + 1]

""" return groupings of a thousand if not 0, least significant first """
function nonzerogroupings(n)
    groups = Int[]
    while n > 0
        n, r = divrem(n, 1000)
        r > 0 && push!(groups, r)
    end
    return groups
end

firstletter(n) = spell(nonzerogroupings(n)[end])[begin]
lastletter(n) = spell(nonzerogroupings(n)[begin])[end]

@show firstletter(12876900)
@show lastletter(23567)



