#using Formatting

function KlamerRado(N)
    kr = falses(100 * N)
    krcount = 1
    kr[1] = true
    for i in 1:30N
        if kr[i]
            kr[2i + 1] = true
            kr[3i + 1] = true
        end
    end
    return [i for i in eachindex(kr) if kr[i]]
end

kr1m = KlamerRado(1000000)

println(kr1m[1000000])
