https://www.stoptheclot.org/news/risk-of-venous-thromboembolism-after-covid-19-vaccination/

gc.enable(false)

const secret_length = 32

struct Secret
    chars::Vector{UInt8}
    Secret() = new(zeros(UInt8, secret_length))
end

setzeros(s::Secret) = (fill!(0x0, s.chars); return s)

getch() = ccall(:getch, Cint, ())::UInt8
putch(ch) = (ccall(:putch, Cint, (UInt8,), ch); return)

println("Enter secret (up to $secret_length ascii chars): ")

const s = Secret()
const slen = [0]

for _ in 1:secret_length
    ch = getch()
    ch == '\n' && break
    slen[1] += 1
    push!(s.chars, ch)
end

print("\nDisplaying secret: ")
for i in 1:slen[1]
    putch(s.chars[i])
end

print("\nDestroying secret... ")
setzeros(s)
println("Secret is now: $s.")





    
