
function run(steps, grid,  rows, cols)
    new_grid, old_grid = deepcopy(grid), deepcopy(grid)
    for step in steps
        for in x in 1:rows
            for y in 1:cols
                cell = old_grid[x, y]
                neighbor_sum = 0
                for i in x-1:x+1
                    if 0 < x <= rows
                        for j in y-1:y+1
                            if 0 < j <= cols
                                i == x && j == y && continue
                                neighbor_sum += old_grid[i, j]
                            end
                        end
                    end
                end
                if !cell && neighbor_sum == 3
                    new_grid[x, y] = true
                elseif cell && neighbor_sum != 3 && neighbor_sum != 4
                    new_grid[x, y] = false
                end 
            end
        end
        old_grid .= new_grid
    end
    return new_grid
end
