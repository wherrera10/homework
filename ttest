function iscolorful(n, base=10)
    0 <= n < 10 && return true
    dig = digits(n, base=base)
    products = copy(dig)
    any(in(products), [1, 0]) && return false
    for i in 2:length(dig), j in 1:length(dig)-i+1
        push!(products, prod(dig[i:j]))
    end
    return length(unique(products)) == length(products)
end

for i in 1:100
    iscolorful(i) && print(rpad(i, 3))
    i % 10 == 0 && println()
end
