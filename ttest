function iscolorful(n, base=10)
    0 <= n < 10 && return true
    dig = digits(n, base=base)
    (1 in dig || 0 in dig || !allunique(dig)) && return false
    products = copy(dig)
    for i in 2:length(dig), j in 1:length(dig)-i+1
        p = prod(dig[i:j])
        p in products && return false
        push!(products, p)
    end
    return true
end

for i in 1:100
    iscolorful(i) && print(rpad(i, 3))
    i % 10 == 0 && println()
end
