
gc.collect(false)

mutable struct Secret
    chars::Vector{UInt8}
    function Secret(chars::Vector)
        arr = zeros(UInt8, 128)
        for i in 1:min(128, length(chars))
            arr[i] = chars[i]
        end
        return finalizer(f, new(arr))
    end
    
    

getch() = ccall(:getch, Cint, ())::UInt8
putch(ch) = (ccall(:putch, Cint, (UInt8,), ch); return)

println("Enter secret (up to 128 ascii chars): ")

ch = 0x0
while ch != '\n'
    
