
using BenchmarkTools

function f(a::Set{Int64}, b::Int64)::Int64
    return sum(union(a, b))
end

function g(a::Set{Int64}, b::Int64)::Int64
    s = sum(a)
    if !in(b, a) s += b end
    return s
end

function h(a::Set{Int64}, b::Int64)::Int64
    return sum(a) + b * (b in a)
end


const a = Set{Int64}(rand(-10000000 : 10000000, 10000000))
const b = maximum(a) + 1

@benchmark f(a, b)

@benchmark g(a, b)

@benchmark h(a, b)
