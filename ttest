directions = [[-1, 0], [1, -1], [1, 1], [1, 0], [1, -1], [-1, -1]]
d_text = ["n", "ne", "se", "s", "sw", "nw"]
d_seq = [directions[findfirst(s)] for s in split(read("$DIR/day11.txt", String), r"\s?,\s?")]
offset = 5000
start = [offset, offset]
pos = copy(offset)
for d in d_seq
    pos .+= d
end
