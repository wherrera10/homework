function factorialdigitspread(upto = 5000; base = 10)
    resultmatrix = zeros(upto, base)
    for n in 1:upto
        diginbase = digits(factorial(BigInt(n)), base=base)
        leng = length(diginbase)
        for i in 0:base-1
            resultmatrix[n, i + 1] = count(x -> x == i, diginbase) / leng
        end
    end
    
    summary = [sum(col) for col in eachcol(resultmatrix)] ./ upto

    return summary, resultmatrix
end

for base in 2:10
    @show base, factorialdigitspread(1000, base = base)[1]
    println()
end


