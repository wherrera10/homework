const max_area, half_max, areas = 1000, 500, falses(max_area)

for i in 1:max_area
    for j in 1:maxlength
        i * j > half_max && break
        for k in 1:maxlength
            area = 2 * (i * j + i * k + j * k)
            area > max_area && break
            areas[area] = true
        end
    end
end

println("Even integer surface areas NOT achievable by any regular, integer dimensioned cuboid:\n",
    [n for n in eachindex(areas) if areas[n]])
   
