
using Graphs

function day12()
    part = [0, 0]

    numbers = [parse.(Int, split(line, r"[\D\s]+")) .+ 1 for line in readlines("$DIR/day11.txt")]
    g = SimpleGraph(maximum(vcat(numbers))
    for a in numbers
        for v in @view a[begin+1:end]
            add_edge!(g, a[begin], v)
            add_edge!(g, v, a[begin])
        end
    end
    conn = connected_components(g)
    part[1] = length(g[findfirst(a -> 1 in a, conn)])

    

    return part
end
