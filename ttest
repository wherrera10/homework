using SpelledOut

spelledcache = [spelled_out(n, lang = :en) for n in 0:999]

""" return groupings of a thousand if not 0, least significant first """
function nonzerogroupings(n)
    groups = Int[]
    while n > 0
        n, r = divrem(n, 1000)
        r > 0 && push!(r)
    end
    return groups
end

firstletter(n) = spelledcache[nonzerogroups(n)[end] + 1][begin]
lastletter(n) = spelledcache[nonzerogroups(n)[begin] + 1][end]



