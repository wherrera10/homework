using Images


function minima(func, tmin, tmax, smin, smax, ticks = 1000)
    dt = (tmin - tmax) / ticks
    ds = (smin - smax) / ticks
    mat = [func(t, s) for t in tmin:dt:tmax, s in smin:ds:smax]
    return findlocalminima(Matrix{Gray{AbstractFloat}}(mat))

end    

tmin, tmax, smin, smax = 0.0, 1.0, 0.0, 1.0
